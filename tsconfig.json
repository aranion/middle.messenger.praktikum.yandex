{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "server"
  ],
  "include": [
    "./src/typings/"
  ]
}