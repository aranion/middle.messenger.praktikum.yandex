{
  "name": "ya_messenger",
  "version": "1.0.0",
  "description": "messenger",
  "scripts": {
    "start": "rm -rf dist && webpack --mode=development --config ./webpack.config.js && webpack serve",
    "eslint": "npx eslint .",
    "eslint:fix": "npx eslint . --fix",
    "lint": "stylelint src/**/*.{css,sass}",
    "lint:fix": "stylelint src/**/*.{css,sass} --fix",
    "server": "set PORT=3000 && node ./server/index.js",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "build": "webpack --mode=production --node-env=production --config ./webpack.config.js",
    "build:prod": "webpack --mode=production --node-env=production --config ./webpack.config.js && npm run server",
    "serve": "webpack serve",
    "prepare": "husky install",
    "docker": "sudo docker build -t chat-app .",
    "dockerStart": "sudo docker run -p 3000:3000 chat-app",
    "showSizeDocker": "sudo docker system df",
    "clearDockerContainers": "sudo docker container prune",
    "deleteDockerImg": "docker rmi $(docker images -f dangling=true -q)",
    "listDocker": "sudo docker ps",
    "stopDocker": "sudo docker stop IMG_NAME",
    "heroku:login": "heroku container:push login",
    "heroku:push": "heroku container:push web --app=yandex-chat-app",
    "heroku:release": "heroku container:release web --app=yandex-chat-app"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.2",
    "express": "4.18.1",
    "express-history-api-fallback": "2.2.1",
    "nanoid": "3"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@parcel/transformer-sass": "2.7.0",
    "@types/chai": "4.3.3",
    "@types/express": "4.17.13",
    "@types/jsdom": "20.0.0",
    "@types/mocha": "10.0.0",
    "@types/node": "18.7.3",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@types/webpack-env": "1.18.0",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "@webpack-cli/generators": "2.5.0",
    "autoprefixer": "10.4.7",
    "chai": "4.3.6",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.1",
    "eslint": "8.23.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "handlebars-loader": "1.7.2",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jsdom": "20.0.1",
    "madge": "5.0.1",
    "mini-css-extract-plugin": "2.6.1",
    "mocha": "10.0.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.7.0",
    "parcel-transformer-pug-precompile": "1.0.6",
    "postcss-sass": "0.5.0",
    "proxyquire": "2.1.3",
    "sass": "1.55.0",
    "sass-loader": "13.1.0",
    "sinon": "14.0.1",
    "style-loader": "3.3.1",
    "stylelint": "14.11.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "5.0.0",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  },
  "optionalDependencies": {
    "@lmdb/lmdb-linux-x64": "2.6.0-beta1",
    "@parcel/css-linux-x64-gnu": "1.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all --parallel test eslint lint",
      "pre-push": "npm run test"
    }
  }
}
